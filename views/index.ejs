    <script>
        function animateCounter(element, target) {
            let current = 0;
            const increment = target / 50;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                element.textContent = Math.floor(current);
            }, 30);
        }

        window.addEventListener('load', () => {
            animateCounter(document.getElementById('userCount'), 150);
            animateCounter(document.getElementById('messageCount'), 2500);
            animateCounter(document.getElementById('roomCount'), 45);
        });

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
