<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ðŸ”¥ Chat OdalarÄ± - UgandaChat</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 15px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .navbar-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            color: #333;
        }

        .logo i {
            font-size: 2rem;
            background: linear-gradient(45deg, #ff5722, #ff9800);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .logo h1 {
            font-size: 1.8rem;
            font-weight: 700;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(45deg, #ff5722, #ff9800);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
        }

        .logout-btn {
            background: #ff5722;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 20px;
            cursor: pointer;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

        .logout-btn:hover {
            background: #f4511e;
            transform: translateY(-1px);
        }

        .main-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 30px 20px;
        }

        .page-header {
            text-align: center;
            margin-bottom: 40px;
            color: white;
        }

        .page-header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .page-header p {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        .rooms-section {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 30px;
            margin-bottom: 40px;
        }

        .rooms-list {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            min-height: 500px;
        }

        .search-bar {
            display: flex;
            gap: 10px;
            margin-bottom: 25px;
        }

        .search-input {
            flex: 1;
            padding: 12px 15px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        .search-input:focus {
            outline: none;
            border-color: #ff5722;
        }

        .search-btn {
            padding: 12px 20px;
            background: #ff5722;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .search-btn:hover {
            background: #f4511e;
        }

        .rooms-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
        }

        .room-card {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 20px;
            transition: all 0.3s ease;
            cursor: pointer;
            border: 2px solid transparent;
        }

        .room-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            border-color: #ff5722;
        }

        .room-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .room-name {
            font-size: 1.3rem;
            font-weight: 600;
            color: #333;
            margin: 0;
        }

        .room-status {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 0.9rem;
            color: #666;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: #4caf50;
        }

        .room-description {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 15px;
            line-height: 1.4;
        }

        .room-stats {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.85rem;
            color: #999;
            gap: 10px;
            flex-wrap: wrap;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 5px;
            flex: 1;
            min-width: 80px;
        }

        .stat-item i.fa-crown {
            color: #ff9800;
        }

        .private-badge {
            background: #ff9800;
            color: white;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .create-room-panel {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            height: fit-content;
            position: sticky;
            top: 120px;
        }

        .create-room-panel h2 {
            color: #333;
            margin-bottom: 20px;
            font-size: 1.5rem;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 600;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #ff5722;
        }

        .form-group textarea {
            resize: vertical;
            min-height: 80px;
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .checkbox-group input[type="checkbox"] {
            width: auto;
            margin: 0;
        }

        .create-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(45deg, #ff5722, #ff9800);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .create-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 87, 34, 0.3);
        }

        .create-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 20px;
            color: #ddd;
        }

        .empty-state h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .alert {
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: none;
        }

        .alert-success {
            background: #e8f5e8;
            color: #2e7d32;
            border: 1px solid #c8e6c9;
        }

        .alert-error {
            background: #ffebee;
            color: #c62828;
            border: 1px solid #ffcdd2;
        }

        .loading {
            display: none;
            text-align: center;
            padding: 20px;
        }

        .spinner {
            border: 3px solid #f3f3f3;
            border-top: 3px solid #ff5722;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            animation: spin 1s linear infinite;
            margin: 0 auto 10px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @media (max-width: 1024px) {
            .rooms-section {
                grid-template-columns: 1fr;
            }
            
            .create-room-panel {
                position: static;
                margin-top: 20px;
            }
        }

        @media (max-width: 768px) {
            .page-header h1 {
                font-size: 2rem;
            }
            
            .rooms-grid {
                grid-template-columns: 1fr;
            }
            
            .search-bar {
                flex-direction: column;
            }
            
            .search-btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="navbar-content">
            <a href="/" class="logo">
                <i class="fas fa-fire"></i>
                <h1>UgandaChat</h1>
            </a>
            <div class="user-info">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <a href="/logout" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    Ã‡Ä±kÄ±ÅŸ
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-container">
        <!-- Page Header -->
        <div class="page-header">
            <h1>Chat OdalarÄ±</h1>
            <p>ArkadaÅŸlarÄ±nla sohbet etmek iÃ§in bir oda seÃ§ ya da yeni oda oluÅŸtur</p>
        </div>

        <!-- Alert Messages -->
        <div id="alert" class="alert"></div>

        <!-- Rooms Section -->
        <div class="rooms-section">
            <!-- Rooms List -->
            <div class="rooms-list">
                <div class="search-bar">
                    <input type="text" class="search-input" placeholder="Oda ara..." id="searchInput">
                    <button class="search-btn" onclick="searchRooms()">
                        <i class="fas fa-search"></i>
                    </button>
                </div>

                <div class="rooms-grid" id="roomsGrid">
                    <% if (rooms && rooms.length > 0) { %>
                        <% rooms.forEach(room => { %>
                            <div class="room-card" onclick="joinRoom('<%= room.id %>')">
                                <div class="room-header">
                                    <h3 class="room-name"><%= room.name %></h3>
                                    <% if (room.isPrivate) { %>
                                        <span class="private-badge">
                                            <i class="fas fa-lock"></i>
                                            Ã–zel
                                        </span>
                                    <% } else { %>
                                        <div class="room-status">
                                            <span class="status-dot"></span>
                                            Aktif
                                        </div>
                                    <% } %>
                                </div>
                                
                                <% if (room.description) { %>
                                    <p class="room-description"><%= room.description %></p>
                                <% } %>
                                
                                <div class="room-stats">
                                    <div class="stat-item">
                                        <i class="fas fa-users"></i>
                                        <span><%= room.memberCount || 0 %> Ã¼ye</span>
                                    </div>
                                    <div class="stat-item">
                                        <i class="fas fa-comments"></i>
                                        <span><%= room.messageCount || 0 %> mesaj</span>
                                    </div>
                                    <div class="stat-item">
                                        <i class="fas fa-crown"></i>
                                        <span><%= room.createdBy || 'Bilinmiyor' %></span>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="fas fa-comments"></i>
                            <h3>HenÃ¼z oda yok</h3>
                            <p>Ä°lk sohbet odasÄ±nÄ± sen oluÅŸtur!</p>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Create Room Panel -->
            <div class="create-room-panel">
                <h2>
                    <i class="fas fa-plus-circle"></i>
                    Yeni Oda OluÅŸtur
                </h2>
                
                <form id="createRoomForm">
                    <div class="form-group">
                        <label for="roomName">Oda AdÄ± *</label>
                        <input type="text" id="roomName" name="roomName" required 
                               placeholder="Oda adÄ±nÄ± girin" maxlength="30">
                    </div>
                    
                    <div class="form-group">
                        <label for="roomDescription">AÃ§Ä±klama</label>
                        <textarea id="roomDescription" name="roomDescription" 
                                  placeholder="Oda hakkÄ±nda kÄ±sa bir aÃ§Ä±klama (opsiyonel)"></textarea>
                    </div>
                    
                    <div class="checkbox-group">
                        <input type="checkbox" id="isPrivate" name="isPrivate">
                        <label for="isPrivate">Ã–zel oda (sadece davet ile giriÅŸ)</label>
                    </div>
                    
                    <button type="submit" class="create-btn" id="createBtn">
                        <i class="fas fa-plus"></i>
                        Oda OluÅŸtur
                    </button>
                </form>

                <div class="loading" id="createLoading">
                    <div class="spinner"></div>
                    <p>Oda oluÅŸturuluyor...</p>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/utils.js"></script>
    <script>
        const createRoomForm = document.getElementById('createRoomForm');
        const createBtn = document.getElementById('createBtn');
        const createLoading = document.getElementById('createLoading');
        const alert = document.getElementById('alert');
        const searchInput = document.getElementById('searchInput');
        const roomsGrid = document.getElementById('roomsGrid');

        createRoomForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(createRoomForm);
            const roomData = {
                roomName: formData.get('roomName'),
                roomDescription: formData.get('roomDescription'),
                isPrivate: formData.get('isPrivate') === 'on'
            };

            if (!roomData.roomName || roomData.roomName.trim().length < 3) {
                showAlert('Oda adÄ± en az 3 karakter olmalÄ±!', 'error');
                return;
            }

            createRoomForm.style.display = 'none';
            createLoading.style.display = 'block';

            try {
                const response = await fetch('/rooms', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(roomData)
                });

                const result = await response.json();

                if (response.ok) {
                    showAlert('Oda baÅŸarÄ±yla oluÅŸturuldu!', 'success');
                    
                    createRoomForm.reset();
                    
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    throw new Error(result.error || 'Oda oluÅŸturulurken hata oluÅŸtu');
                }

            } catch (error) {
                console.error('Create room error:', error);
                showAlert(error.message || 'Oda oluÅŸturulurken hata oluÅŸtu', 'error');
            } finally {
                createLoading.style.display = 'none';
                createRoomForm.style.display = 'block';
            }
        });

        function joinRoom(roomId) {
            window.location.href = `/rooms/${roomId}`;
        }

        function searchRooms() {
            const searchTerm = searchInput.value.toLowerCase().trim();
            const roomCards = roomsGrid.querySelectorAll('.room-card');

            roomCards.forEach(card => {
                const roomName = card.querySelector('.room-name').textContent.toLowerCase();
                const roomDescription = card.querySelector('.room-description');
                const description = roomDescription ? roomDescription.textContent.toLowerCase() : '';

                if (roomName.includes(searchTerm) || description.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        searchInput.addEventListener('input', searchRooms);

        

        function showAlert(message, type) {
            alert.textContent = message;
            alert.className = `alert alert-${type}`;
            alert.style.display = 'block';
            
            setTimeout(() => {
                alert.style.display = 'none';
            }, 5000);
        }

        window.addEventListener('load', () => {
            <% if (typeof error !== 'undefined' && error) { %>
                showAlert('<%= error %>', 'error');
            <% } %>
        });
    </script>
</body>
</html> 