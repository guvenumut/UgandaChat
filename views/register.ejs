<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ðŸ”¥ KayÄ±t Ol - UgandaChat</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .register-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 20px;
        }

        .register-card {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 450px;
            position: relative;
            overflow: hidden;
        }

        .register-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #ff5722, #e91e63, #9c27b0);
        }

        .register-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .register-header h1 {
            color: #333;
            font-size: 2.5rem;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .fire-icon-link {
            text-decoration: none;
            display: inline-block;
            transition: transform 0.3s ease;
            cursor: pointer;
        }

        .fire-icon-link:hover {
            transform: scale(1.1);
        }

        .register-header .fire-icon {
            font-size: 3rem;
            background: linear-gradient(45deg, #ff5722, #ff9800);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: block;
            margin-bottom: 15px;
            transition: all 0.3s ease;
        }

        .register-header p {
            color: #666;
            font-size: 1.1rem;
        }

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 600;
            font-size: 1rem;
        }

        .input-wrapper {
            position: relative;
        }

        .input-wrapper i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
            font-size: 1.1rem;
        }

        .form-group input {
            width: 100%;
            padding: 15px 15px 15px 45px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }

        .form-group input:focus {
            outline: none;
            border-color: #ff5722;
            background: white;
            box-shadow: 0 0 0 3px rgba(255, 87, 34, 0.1);
        }

        .form-group input.error {
            border-color: #f44336;
            background: #ffebee;
        }

        .error-message {
            color: #f44336;
            font-size: 0.9rem;
            margin-top: 5px;
            display: none;
        }

        .password-strength {
            margin-top: 8px;
            height: 4px;
            background: #e0e0e0;
            border-radius: 2px;
            overflow: hidden;
        }

        .password-strength-bar {
            height: 100%;
            width: 0%;
            transition: all 0.3s ease;
            border-radius: 2px;
        }

        .btn-register {
            width: 100%;
            padding: 15px;
            background: linear-gradient(45deg, #ff5722, #ff9800);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(255, 87, 34, 0.3);
        }

        .btn-register:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .login-link {
            text-align: center;
            margin-top: 25px;
            padding-top: 25px;
            border-top: 1px solid #e0e0e0;
        }

        .login-link a {
            color: #ff5722;
            text-decoration: none;
            font-weight: 600;
        }

        .login-link a:hover {
            text-decoration: underline;
        }

        .loading {
            display: none;
            text-align: center;
            margin-top: 20px;
        }

        .spinner {
            border: 3px solid #f3f3f3;
            border-top: 3px solid #ff5722;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            animation: spin 1s linear infinite;
            margin: 0 auto 10px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .success-message {
            background: #4caf50;
            color: white;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: center;
            display: none;
        }

        .alert {
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: none;
        }

        .alert-error {
            background: #ffebee;
            color: #c62828;
            border: 1px solid #ffcdd2;
        }

        .alert-success {
            background: #e8f5e8;
            color: #2e7d32;
            border: 1px solid #c8e6c9;
        }

        .social-login {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #e0e0e0;
        }

        .social-btn {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            background: white;
            color: #333;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
            margin-bottom: 10px;
        }

        .social-btn:hover {
            border-color: #ff5722;
            background: #fff5f5;
        }

        .social-btn.google {
            color: #db4437;
        }

        @media (max-width: 480px) {
            .register-card {
                padding: 30px 20px;
            }
            
            .register-header h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <div class="register-header">
                <a href="/" class="fire-icon-link">
                    <i class="fas fa-fire fire-icon"></i>
                </a>
                <h1>KayÄ±t Ol</h1>
                                    <p>UgandaChat'e hoÅŸ geldin!</p>
            </div>

            <div id="alert" class="alert"></div>

            <form id="registerForm" action="/register" method="post">
                <div class="form-group">
                    <label for="username">
                        <i class="fas fa-user"></i>
                        KullanÄ±cÄ± AdÄ±
                    </label>
                    <div class="input-wrapper">
                        <i class="fas fa-user"></i>
                        <input type="text" id="username" name="username" required 
                               placeholder="KullanÄ±cÄ± adÄ±nÄ±z (3-20 karakter)">
                    </div>
                    <div class="error-message" id="usernameError"></div>
                </div>

                <div class="form-group">
                    <label for="email">
                        <i class="fas fa-envelope"></i>
                        Email
                    </label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope"></i>
                        <input type="email" id="email" name="email" required 
                               placeholder="ornek@email.com">
                    </div>
                    <div class="error-message" id="emailError"></div>
                </div>

                <div class="form-group">
                    <label for="password">
                        <i class="fas fa-lock"></i>
                        Åžifre
                    </label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="password" name="password" required 
                               placeholder="En az 8 karakter">
                    </div>
                    <div class="password-strength">
                        <div class="password-strength-bar" id="passwordStrengthBar"></div>
                    </div>
                    <div class="error-message" id="passwordError"></div>
                </div>



                <button type="submit" class="btn-register" id="registerBtn">
                    <i class="fas fa-user-plus"></i>
                    KayÄ±t Ol
                </button>
            </form>

            <div class="loading" id="loading">
                <div class="spinner"></div>
                <p>KayÄ±t oluÅŸturuluyor...</p>
            </div>

            <div class="social-login">
                <a href="/auth/google" class="social-btn google">
                    <i class="fab fa-google"></i>
                    Google ile devam et
                </a>
            </div>

            <div class="login-link">
                <p>Zaten hesabÄ±n var mÄ±? <a href="/login">GiriÅŸ Yap</a></p>
            </div>
        </div>
    </div>

    <script src="/js/utils.js"></script>
    <script>
        const form = document.getElementById('registerForm');
        const usernameInput = document.getElementById('username');
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const registerBtn = document.getElementById('registerBtn');
        const alert = document.getElementById('alert');

        function showAlert(message, type) {
            alert.textContent = message;
            alert.className = `alert alert-${type}`;
            alert.style.display = 'block';
            
            setTimeout(() => {
                alert.style.display = 'none';
            }, 5000);
        }

        function showFieldError(input, errorEl, message) {
            input.classList.add('error');
            errorEl.textContent = message;
            errorEl.style.display = 'block';
        }

        function hideFieldError(input, errorEl) {
            input.classList.remove('error');
            errorEl.style.display = 'none';
        }

        function validateUsername() {
            const username = usernameInput.value.trim();
            const errorEl = document.getElementById('usernameError');
            
            if (!username) {
                showFieldError(usernameInput, errorEl, 'KullanÄ±cÄ± adÄ± gerekli!');
                return false;
            }
            
            if (username.length < 3) {
                showFieldError(usernameInput, errorEl, 'KullanÄ±cÄ± adÄ± en az 3 karakter olmalÄ±!');
                return false;
            }
            
            if (username.length > 20) {
                showFieldError(usernameInput, errorEl, 'KullanÄ±cÄ± adÄ± en fazla 20 karakter olabilir!');
                return false;
            }
            
            if (!/^[a-zA-Z0-9]+$/.test(username)) {
                showFieldError(usernameInput, errorEl, 'KullanÄ±cÄ± adÄ± sadece harf ve rakam iÃ§erebilir!');
                return false;
            }
            
            hideFieldError(usernameInput, errorEl);
            return true;
        }

        function validateEmail() {
            const email = emailInput.value.trim();
            const errorEl = document.getElementById('emailError');
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            
            if (!email) {
                showFieldError(emailInput, errorEl, 'Email gerekli!');
                return false;
            }
            
            if (!emailRegex.test(email)) {
                showFieldError(emailInput, errorEl, 'GeÃ§erli bir email adresi girin!');
                return false;
            }
            
            hideFieldError(emailInput, errorEl);
            return true;
        }

        function validatePassword() {
            const password = passwordInput.value;
            const errorEl = document.getElementById('passwordError');
            
            if (!password) {
                showFieldError(passwordInput, errorEl, 'Åžifre gerekli!');
                return false;
            }
            
            if (password.length < 8) {
                showFieldError(passwordInput, errorEl, 'Åžifre en az 8 karakter olmalÄ±!');
                return false;
            }
            
            let strength = 0;
            if (password.length >= 8) strength++;
            if (/[a-z]/.test(password)) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[^A-Za-z0-9]/.test(password)) strength++;
            
            const strengthBar = document.getElementById('passwordStrengthBar');
            const colors = ['#f44336', '#ff9800', '#ffeb3b', '#8bc34a', '#4caf50'];
            const widths = ['20%', '40%', '60%', '80%', '100%'];
            
            if (strength > 0) {
                strengthBar.style.width = widths[strength - 1];
                strengthBar.style.backgroundColor = colors[strength - 1];
            }
            
            hideFieldError(passwordInput, errorEl);
            return true;
        }

        usernameInput.addEventListener('input', validateUsername);
        emailInput.addEventListener('input', validateEmail);
        passwordInput.addEventListener('input', validatePassword);

        form.addEventListener('submit', (e) => {
            const isUsernameValid = validateUsername();
            const isEmailValid = validateEmail();
            const isPasswordValid = validatePassword();
            
            if (!isUsernameValid || !isEmailValid || !isPasswordValid) {
                e.preventDefault();
                showAlert('LÃ¼tfen tÃ¼m alanlarÄ± doÄŸru ÅŸekilde doldurun!', 'error');
                return false;
            }
            
            showAlert('KayÄ±t iÅŸlemi baÅŸlatÄ±lÄ±yor...', 'success');
            registerBtn.disabled = true;
            registerBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> KayÄ±t Olunuyor...';
        });

        window.addEventListener('load', () => {
            const urlParams = new URLSearchParams(window.location.search);
            const error = urlParams.get('error');
            
            if (error) {
                const errorMessages = {
                    'email_exists': 'Bu email adresi zaten kullanÄ±lÄ±yor!',
                    'username_exists': 'Bu kullanÄ±cÄ± adÄ± zaten kullanÄ±lÄ±yor!',
                    'invalid_data': 'GeÃ§ersiz veri giriÅŸi!',
                    'server_error': 'Sunucu hatasÄ± oluÅŸtu!'
                };
                
                showAlert(errorMessages[error] || 'KayÄ±t sÄ±rasÄ±nda hata oluÅŸtu!', 'error');
            }
        });
    </script>
    
</body>
</html> 